pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  name: buildah
spec:
  containers:
  - name: buildah
    image: quay.io/buildah/stable:latest
    command:
    - cat
    tty: true
    securityContext:
      allowPrivilegedContainer: true
    serviceAccountName: test-buildah
    volumeMounts:
      - name: varlibcontainers
        mountPath: /var/lib/containers
  volumes:
    - name: varlibcontainers
'''   
    }
  }



  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
    durabilityHint('PERFORMANCE_OPTIMIZED')
    disableConcurrentBuilds()
  }
  stages {

    stage('Build with Buildah') {
      steps {
        container('buildah') {
          sh'buildah --version'
          sh'buildah build  --isolation=chroot -t arijknani009/jenkins-example-buildah:latest . '
        }
      }
    }
  }
}
