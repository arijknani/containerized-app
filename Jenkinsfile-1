pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  name: buildah
spec:
  capabilities:
    add: ["CHOWN", "DAC_OVERRIDE", "FOWNER", "SETUID", "SETGID"]
  runAsUser: 0
  containers:
  - name: buildah
    image: quay.io/buildah/stable:v1.11.4
    command:
    - cat
    tty: true
    securityContext:
      allowPrivilegedContainer: true
    serviceAccountName: test-buildah
    volumeMounts:
      - name: varlibcontainers
        mountPath: /var/lib/containers
  volumes:
    - name: varlibcontainers
'''   
    }
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
    durabilityHint('PERFORMANCE_OPTIMIZED')
    disableConcurrentBuilds()
  }
  stages {
    stage('Build with Buildah') {
        steps {
            container('buildah') {
                sh 'buildah --version'
                sh 'buildah bud --isolation=chroot -t arijknani009/jenkins-example-buildah:latest .'
            }
        }
    }
}
}
